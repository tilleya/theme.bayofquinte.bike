<footer class="footer-section global-footer">
	<div class="footer-wrap">
		<div class="footer-logo">
			{{>logo}}
			{{#if @site.description}}
			<p class="footer-description">{{@site.description}}</p>
			{{/if}}
		</div>
		<div class="footer-nav">
			{{#if @site.secondary_navigation}}
			{{navigation type="secondary"}}
			{{/if}}
		</div>
		<div id="icons" class="footer-icons">
			{{#if @site.facebook}}
			<a href="{{facebook_url}}" aria-label="link Facebook">{{>icons/social/facebook}}</a>
			{{/if}}
			{{#if @site.twitter}}
			<a href="{{twitter_url}}" aria-label="link X">{{>icons/social/x}}</a>
			{{/if}}
			{{>footer_icons}}
		</div>
	</div>
	<div class="footer-copyright">
		&copy; {{date format="YYYY"}} {{@site.title}}.
		{{#if @custom.footer_copyright}}
		{{{@custom.footer_copyright}}}
		{{else}}
		{{{t "All Right Reserved. Published with {ghost-link} and {theme-name}." ghost-link="<a href=\"https://ghost.org\" target=\"_blank\" rel=\"noopener noreferrer\">Ghost</a>" theme-name="<a href=\"https://fueko.net\" target=\"_blank\" rel=\"noopener\">Shoji</a>"}}}
		{{/if}}
	</div>
</footer>