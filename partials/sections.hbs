{{!-- Special Sections for Custom Tags --}}
{{#if @custom.tag_for_special_section_1}}
    <div class="special-section">
        <div class="global-heading">
            {{#get "tags" limit="1" filter="slug:[{{@custom.tag_for_special_section_1}}]"}}
                {{#foreach tags}}
                    <h3>{{name}}</h3>  {{!-- ✅ Uses Tag Name Instead of Custom Title --}}
                    <a href="{{url}}">{{t "See all {primary-tag}" primary-tag=name}}{{>icons/site/arrow_right}}</a>
                {{/foreach}}
            {{/get}}
        </div>
        {{#get "posts" limit="5" filter="tag:[{{@custom.tag_for_special_section_1}}]" include="authors,tags"}}
            {{>sections_content}}
        {{/get}}
    </div>
{{/if}}

