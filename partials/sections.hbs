{{!-- Fallback Logic for Posts Without Special Tags --}}
{{#unless @custom.tag_for_special_section_1}}
    {{#unless @custom.tag_for_special_section_2}}
        {{#unless @custom.tag_for_special_section_3}}
            {{#foreach posts limit="1"}}
                {{#if primary_tag}}
                    <div class="special-section">
                        <div class="global-heading">
                            <h3>{{primary_tag.name}}</h3>  {{!-- ✅ Uses Tag Name for Fallback --}}
                            <a href="{{primary_tag.url}}">{{t "See all {primary-tag}" primary-tag=primary_tag.name}}{{>icons/site/arrow_right}}</a>
                        </div>
                        {{#get "posts" limit="5" filter="tag:{{primary_tag.slug}}+id:-{{id}}" include="authors,tags"}}
                            {{>sections_content}}
                        {{/get}}
                    </div>
                {{/if}}
            {{/foreach}}
        {{/unless}}
    {{/unless}}
{{/unless}}