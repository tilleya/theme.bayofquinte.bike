<div id="pinned" class="pinned-section">
	<div class="pinned-wrap">
		{{#get "pages" limit="2" filter="featured:true" as |pinned_pages|}}
		{{#if pinned_pages}}
		<div class="pinned-items{{#if @site.cover_image}} is-cover{{/if}}">
			{{#foreach pages}}
			<div class="pinned-item">
				<a href="{{url}}" class="global-link" aria-label="pinned {{title}}"></a>
				{{#if feature_image}}
				<div class="pinned-image global-image">
					{{>images/loop_feature_img is_pinned=true}}
				</div>
				{{/if}}
				<div class="pinned-content">
					<h3 class="pinned-title">{{title}}</h3>
				</div>
			</div>
			{{/foreach}}
		</div>
		{{/if}}
		{{/get}}
		{{#get "posts" limit="4" filter="featured:true" include="authors" as |pinned_posts|}}
		{{#if pinned_posts}}
		<div class="pinned-items{{#if @site.cover_image}} is-cover{{/if}}">
			{{#foreach posts}}
			<div class="pinned-item">
				<a href="{{url}}" class="global-link" aria-label="pinned {{title}}"></a>
				{{#if feature_image}}
				<div class="pinned-image global-image">
					{{>images/loop_feature_img is_pinned=true}}
				</div>
				{{/if}}
				<div class="pinned-content">
					{{#if @custom.show_author}}
					<div class="pinned-meta global-meta">
						{{#has author="count:1"}}
						{{authors}}
						{{else has author="count:2"}}
						{{authors separator=(t " & ")}}
						{{else has author="count:>2"}}
						{{authors limit="1"}}
						{{t "and others"}}
						{{/has}}
					</div>
					{{/if}}
					<h3 class="pinned-title">{{title}}</h3>
					{{^if feature_image}}
					{{^if custom_excerpt}}
					{{#if excerpt}}
					<p class="special-item-excerpt loop-item-excerpt">
						{{excerpt words="25"}}...
					</p>
					{{/if}}
					{{else}}
					<p class="special-item-excerpt loop-item-excerpt">
						{{custom_excerpt}}
					</p>
					{{/if}}
					{{/if}}
				</div>
			</div>
			{{/foreach}}
		</div>
		{{/if}}
		{{/get}}
	</div>
	{{#if @site.cover_image}}
	<div class="pinned-cover global-image">
		{{>images/site_cover_img is_cover=true}}
	</div>
	{{/if}}
</div>