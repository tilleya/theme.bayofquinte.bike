{{!< default-custom}}
{{#contentFor "custom_meta_title"}}{{meta_title}}{{/contentFor}}
<body class="custom-contact custom-page custom-split-layout">
  <div class="custom-wrap-split">
    {{#post}}
      {{#if feature_image}}
        <div class="custom-image-split" style="background-image: url({{feature_image}})"></div>
      {{/if}}
      <div class="custom-container-split">
        <div class="custom-header">
          <a href="{{@site.url}}">{{>icons/site/arrow_left}}{{t "Back to homepage"}}</a>
        </div>
        
        <div class="custom-form">
          <form action="{{excerpt}}" method="POST">
            {{content}}
          </form>
        </div>
        
        {{#if @site.description}}
        <div class="custom-footer">
          <a href="{{@site.url}}">{{@site.title}}.</a>
          <span>{{@site.description}}</span>
        </div>
        {{/if}}
      </div>
    {{/post}}
  </div>
  {{ghost_foot}}
</body>