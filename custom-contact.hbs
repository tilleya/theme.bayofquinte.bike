{{!< default-custom}}
{{#contentFor "custom_meta_title"}}{{meta_title}}{{/contentFor}}
<body class="custom-contact custom-page">
	<div class="custom-wrap">
		{{#post}}
		{{#if feature_image}}
		<div class="custom-image global-bg-image" style="background-image: url({{feature_image}})">
		</div>
		{{/if}}
		<div class="custom-container">
			<div class="custom-header">
				<a href="{{@site.url}}">{{>icons/site/arrow_left}}{{t "Back to homepage"}}</a>
			</div>
			<div class="custom-content">
				<form method="POST" action="{{@custom.contact_form_endpoint}}">
					<h3>{{title}}</h3>
					<input aria-label="{{t "Your name"}}" type="text" name="name" placeholder="{{t "Your name"}}" required>
					<span class="input-underline"></span>
					<input aria-label="{{t "Your email address"}}" type="email" name="email" placeholder="{{t "Your email address"}}" required>
					<span class="input-underline"></span>
					<textarea aria-label="{{t "Your message"}}" name="message" placeholder="{{t "Your message"}}" required></textarea>
					<button class="global-button" type="submit">{{t "Send message"}}</button>
				</form>
			</div>
			{{#if @site.description}}
			<div class="custom-footer">
				<a href="{{@site.url}}">{{@site.title}}.</a>
				<span>{{@site.description}}</span>
			</div>
			{{/if}}
		</div>
		{{/post}}
	</div>
	{{ghost_foot}}
</body>