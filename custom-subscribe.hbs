{{!< default-custom}}
{{#contentFor "custom_meta_title"}}{{meta_title}}{{/contentFor}}
<body class="custom-page">
	{{#post}}
	<div class="custom-wrap">
		{{#if feature_image}}
		<div class="custom-image global-bg-image" style="background-image: url({{feature_image}})"></div>
		{{/if}}
		<div class="custom-container">
			<div class="custom-header">
				<a href="{{@site.url}}">{{>icons/site/arrow_left}}{{t "Back to homepage"}}</a>
			</div>
			<div class="custom-content">
				<form data-members-form="subscribe" data-members-autoredirect="false">
					<h3>{{title}}</h3>
					{{#if @site.portal_name}}
					<input data-members-name type="text" placeholder="{{t "Your name"}}" aria-label="{{t "Your name"}}" required>
					<span class="input-underline"></span>
					{{/if}}
					<input data-members-email type="email" placeholder="{{t "Your email address"}}" aria-label="{{t "Your email address"}}" required>
					<span class="input-underline"></span>
					<button class="global-button" type="submit">{{t "Subscribe"}}</button>
					<small class="alert-loading">{{t "Processing your application"}}</small>
					<small class="alert-error">{{t "There was an error sending the email"}}</small>
				</form>
				<div class="alert-success">
					<h3>{{t "Great!"}}</h3>
					<p>{{t "Check your inbox and click the link to confirm your subscription"}}</p>
					<a href="{{@site.url}}" class="global-button">{{t "Back to homepage"}}</a>
				</div>
			</div>
			{{#if @site.description}}
			<div class="custom-footer">
				<a href="{{@site.url}}">{{@site.title}}.</a>
				<span>{{@site.description}}</span>
			</div>
			{{/if}}
		</div>
	</div>
	{{/post}}
	{{ghost_foot}}
</body>